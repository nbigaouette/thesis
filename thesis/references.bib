file = {:home/nicolas/fichiers/documents/universite/doc/articles/2011\_Ackad, Bigaouette, Ramunno\_Augmented collisional ionization via excited states in XUV cluster interactions.pdf:pdf},
issn = {0953-4075},
journal = {Journal of Physics B: Atomic, Molecular and Optical Physics},
keywords = {32nm,Atomic Physics,Atomic and Molecular Clusters,Computational Physics,XUV,argon,excited states},
mendeley-tags = {32nm,XUV,argon,excited states},
month = aug,
number = {16},
pages = {165102},
title = {{Augmented collisional ionization via excited states in XUV cluster interactions}},
