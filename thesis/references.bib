doi = {10.1016/j.cpc.2011.08.011},
file = {:home/nicolas/fichiers/documents/universite/doc/articles/2011\_Bigaouette, Ackad, Ramunno\_Nonlinear grid mapping applied to an FDTD-based, multi-center 3D Schr\"{o}dinger equation solver.pdf:pdf},
issn = {00104655},
journal = {Computer Physics Communications},
keywords = {mapping,qfdtd},
mendeley-tags = {mapping,qfdtd},
month = aug,
title = {{Nonlinear grid mapping applied to an FDTD-based, multi-center 3D Schr\"{o}dinger equation solver}},
url = {http://linkinghub.elsevier.com/retrieve/pii/S0010465511002839},
